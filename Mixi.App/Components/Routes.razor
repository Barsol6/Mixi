<Router AppAssembly="@typeof(MauiProgram).Assembly"
        AdditionalAssemblies="@(new[] { typeof(Mixi.SharedUI.App).Assembly })">
    <Found Context="routeData">
        <RouteView RouteData="routeData" DefaultLayout="@typeof(Mixi.SharedUI.Components.Layout.MainLayout)"/>
        <FocusOnNavigate RouteData="routeData" Selector="h1"/>
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(Mixi.SharedUI.Components.Layout.MainLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>